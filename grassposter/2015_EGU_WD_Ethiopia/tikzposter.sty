\newcommand{\titleblock}[3][(0,0)]{

  %%%%% template N2
  \ifthenelse{\equal{\titletemplate}{2}}{
    \node[anchor=north,text=titletextcolor,scale=#3] (title) at ($(currenty)+#1$)
    {
      \begin{minipage}{#2 cm}
